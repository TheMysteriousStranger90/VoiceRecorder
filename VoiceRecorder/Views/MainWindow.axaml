<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:VoiceRecorder.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        Width="1280" Height="720"
        MinWidth="800" MinHeight="600"
        x:Class="VoiceRecorder.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.ico"
        Opacity="0.9"
        Title="AzioVoice Recorder">

    <Window.Styles>
        <StyleInclude Source="/Styles/MainTheme.axaml" />
    </Window.Styles>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <Border Classes="panel" Grid.Column="0" Margin="8,16,4,16">
            <StackPanel Spacing="8">
                <!-- Recording View Button -->
                <Button Classes="navButton"
                        Command="{Binding ShowRecordingViewCommand}"
                        ToolTip.Tip="Recording">
                    <PathIcon Data="{StaticResource RecordIcon}"
                              Width="20"
                              Height="20" />
                </Button>

                <!-- File Explorer Button -->
                <Button Classes="navButton"
                        Command="{Binding ShowFileExplorerCommand}"
                        ToolTip.Tip="Files">
                    <PathIcon Data="{StaticResource FolderIcon}"
                              Width="20"
                              Height="20" />
                </Button>

                <!-- Settings Button -->
                <Button Classes="navButton"
                        Command="{Binding ShowSettingsCommand}"
                        ToolTip.Tip="Settings">
                    <PathIcon
                        Data="M12 15a3 3 0 100-6 3 3 0 000 6z M19.4 15a1.65 1.65 0 00.33 1.82l.06.06a2 2 0 010 2.83 2 2 0 01-2.83 0l-.06-.06a1.65 1.65 0 00-1.82-.33 1.65 1.65 0 00-1 1.51V21a2 2 0 01-2 2 2 2 0 01-2-2v-.09A1.65 1.65 0 009 19.4a1.65 1.65 0 00-1.82.33l-.06.06a2 2 0 01-2.83 0 2 2 0 010-2.83l.06-.06a1.65 1.65 0 00.33-1.82 1.65 1.65 0 00-1.51-1H3a2 2 0 01-2-2 2 2 0 012-2h.09A1.65 1.65 0 004.6 9a1.65 1.65 0 00-.33-1.82l-.06-.06a2 2 0 010-2.83 2 2 0 012.83 0l.06.06a1.65 1.65 0 001.82.33H9a1.65 1.65 0 001-1.51V3a2 2 0 012-2 2 2 0 012 2v.09a1.65 1.65 0 001 1.51 1.65 1.65 0 001.82-.33l.06-.06a2 2 0 012.83 0 2 2 0 010 2.83l-.06.06a1.65 1.65 0 00-.33 1.82V9a1.65 1.65 0 001.51 1H21a2 2 0 012 2 2 2 0 01-2 2h-.09a1.65 1.65 0 00-1.51 1z"
                        Width="20"
                        Height="20" />
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" RowDefinitions="*,Auto">
            <!-- Content Area -->
            <ContentControl Grid.Row="0"
                            Content="{Binding CurrentView}"
                            Margin="8,16,16,16" />

            <!-- Status Bar -->
            <Border Grid.Row="1"
                    CornerRadius="10"
                    Background="#80F"
                    Margin="20,0,20,16"
                    Height="35"
                    VerticalAlignment="Bottom">
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="White"
                           FontSize="14"
                           TextAlignment="Center"
                           VerticalAlignment="Center" />
            </Border>
        </Grid>
    </Grid>
</Window>
