<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:VoiceRecorder.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:VoiceRecorder.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="VoiceRecorder.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.ico"
        Opacity="0.9"
        Title="Voice Recorder">
    
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <Window.Styles>
        <StyleInclude Source="/Styles/Styles.axaml" />
    </Window.Styles>

    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Left" Width="200">
            <Button Content="Go To Recording" Click="NavigateToMainWindow" IsEnabled="{Binding IsMainWindowActive}" Margin="10,30,10,10"/>
            <Button Content="Go To File Explorer" Click="NavigateToSecondWindow" IsEnabled="{Binding IsSecondWindowActive}" Margin="10"/>
        </StackPanel>

        <ContentControl x:Name="MainContent" />
        
        <Border DockPanel.Dock="Bottom" CornerRadius="10" Background="#80F" Margin="20,55,20,5">
            <StackPanel Height="35">
                <TextBlock x:Name="StopButtonTextBlock" Foreground="#FFFFFFFF" FontSize="14" TextAlignment="Center"
                           Padding="10" />
            </StackPanel>
        </Border>

        <StackPanel Margin="10">
            <controls:AudioVisualizerControl 
                Height="100" 
                Margin="0,10,0,0"
                IsActive="{Binding IsRecording}"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="StartButton_Click" 
                        Margin="0,10,10,0"
                        IsEnabled="{Binding !IsRecording}">
                    <Image Source="{SvgImage /Assets/play.svg}" Width="25" Height="25" />
                </Button>

                <Button Click="StopButton_Click" 
                        IsEnabled="{Binding IsRecording}" 
                        Margin="10,10,0,0">
                    <Image Source="{SvgImage /Assets/pause.svg}" Width="25" Height="25" />
                </Button>
            </StackPanel>

            <Grid ColumnDefinitions="*, 15, *" Margin="0,20,0,0">
                <StackPanel Grid.Column="0" Margin="10,0">
                    <Label Content="FILTERS" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10" />
                    <ListBox x:Name="FilterList" 
                             SelectedIndex="-1" 
                             ItemsSource="{Binding AvailableFilters}"
                             SelectedItem="{Binding SelectedFilterViewModel}" />
                </StackPanel>
    
                <GridSplitter Grid.Column="1" 
                              Background="#103" 
                              ResizeDirection="Columns"
                              Width="1"
                              Margin="0,10" />
                  
                <StackPanel Grid.Column="2" Margin="10,0">
                    <Label Content="DEVICES" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10" />
                    <ListBox x:Name="DeviceList" 
                             SelectedIndex="0" 
                             ItemsSource="{Binding AvailableDevices}"
                             SelectedItem="{Binding SelectedDevice}" />
                </StackPanel>
            </Grid>

            <Button Click="OpenFolderButton_Click" HorizontalAlignment="Center" Margin="0,25,0,0">
                <Image Source="{SvgImage /Assets/folder-plus.svg}" Width="25" Height="25" />
            </Button>
            
            <Label x:Name="TimerLabel" 
                   Content="00:00:00" 
                   HorizontalAlignment="Center"
                   FontSize="24"
                   Foreground="#80F"
                   FontWeight="Bold"
                   Margin="0,5,0,0"/>
        </StackPanel>
    </DockPanel>
</Window>