<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:VoiceRecorder.Controls">

    <Style Selector="Window">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Offset="0" Color="#202020"/>
                <GradientStop Offset="1" Color="#1A1A1A"/>
            </LinearGradientBrush>
        </Setter>
    </Style>

    <Style Selector="controls|AudioVisualizerControl">
        <Setter Property="Background" Value="#2C2C2C"/>
        <Setter Property="BorderBrush" Value="#8800FF"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style Selector="Button">
        <Setter Property="Foreground" Value="#FFFFFF" />
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Offset="0" Color="#8800FF"/>
                <GradientStop Offset="1" Color="#AA44FF"/>
            </LinearGradientBrush>
        </Setter>
        <Setter Property="BorderBrush" Value="#6600CC" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Offset="0" Color="#AA00FF"/>
                <GradientStop Offset="1" Color="#CC66FF"/>
            </LinearGradientBrush>
        </Setter>
        <Setter Property="RenderTransform" Value="scale(1.05)"/>
    </Style>

    <Style Selector="Button:pressed">
        <Setter Property="RenderTransform" Value="scale(0.95)"/>
    </Style>

    <Style Selector="Button:disabled">
        <Setter Property="Opacity" Value="0.5"/>
    </Style>

    <Style Selector="Button.navButton">
        <Setter Property="Background" Value="#333333"/>
        <Setter Property="Foreground" Value="#E5E5E5"/> <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#444444"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <Style Selector="Button.navButton:pointerover">
        <Setter Property="Background" Value="#404040"/>
        <Setter Property="BorderBrush" Value="#8800FF"/>
        <Setter Property="RenderTransform" Value="scale(1.05)"/>
    </Style>

    <Style Selector="Button.navButton:pressed">
        <Setter Property="Background" Value="#2A2A2A"/>
        <Setter Property="RenderTransform" Value="scale(0.95)"/>
    </Style>

    <Style Selector="ListBox">
        <Setter Property="Background" Value="#2C2C2C"/>
        <Setter Property="Foreground" Value="#E5E5E5"/>
        <Setter Property="BorderBrush" Value="#8800FF"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>

    <Style Selector="ListBoxItem">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="#333333"/>
        <Setter Property="BorderBrush" Value="#444444"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style Selector="ListBoxItem:pointerover">
        <Setter Property="Background" Value="#404040"/>
        <Setter Property="BorderBrush" Value="#8800FF"/>
        <Setter Property="RenderTransform" Value="scale(1.01)"/>
    </Style>

    <Style Selector="ListBoxItem:selected">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Offset="0" Color="#8800FF"/>
                <GradientStop Offset="1" Color="#AA44FF"/>
            </LinearGradientBrush>
        </Setter>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#6600CC"/>
    </Style>

    <Style Selector="ListBoxItem:selected:pointerover">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Offset="0" Color="#AA00FF"/>
                <GradientStop Offset="1" Color="#CC66FF"/>
            </LinearGradientBrush>
        </Setter>
    </Style>

    <Style Selector="ListBoxItem TextBlock">
        <Setter Property="Foreground" Value="#E5E5E5"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <Style Selector="ListBoxItem:selected TextBlock">
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>

    <Style Selector="ListBoxItem:selected:pointerover TextBlock">
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>

    <Style Selector="Label">
        <Setter Property="Foreground" Value="#E5E5E5"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="#E5E5E5"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style Selector="Border.panel">
        <Setter Property="Background" Value="#2C2C2C"/>
        <Setter Property="BorderBrush" Value="#444444"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BoxShadow" Value="0 2 12 0 #30000000"/> </Style>

    <Style Selector="Label#TimerLabel">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#8800FF"/>
        <Setter Property="Padding" Value="20,8"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="#8800FF"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="#2C2C2C"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        BoxShadow="0 4 12 0 #20000000">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Padding="{TemplateBinding Padding}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="GridSplitter">
        <Setter Property="Background" Value="#444444"/>
        <Setter Property="Width" Value="2"/>
    </Style>

    <Style Selector="Border">
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Slider">
        <Setter Property="Foreground" Value="#8800FF"/> </Style>

    <Style Selector="Slider:pointerover /template/ Thumb">
        <Setter Property="Background" Value="#AA00FF"/>
    </Style>

    <Style Selector="PathIcon">
        <Setter Property="Foreground" Value="#E5E5E5"/> </Style>

    <Style Selector="Button PathIcon">
        <Setter Property="Foreground" Value="#FFFFFF"/> </Style>

    <Style Selector="Button.navButton PathIcon">
        <Setter Property="Foreground" Value="#8800FF"/> </Style>

    <Style Selector="Button.navButton:pointerover PathIcon">
        <Setter Property="Foreground" Value="#AA00FF"/> </Style>

    <Style Selector="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="TextBlock.secondary">
        <Setter Property="Foreground" Value="#AAAAAA"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style Selector="TextBlock.filename">
        <Setter Property="Foreground" Value="#E5E5E5"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style Selector="ListBoxItem:selected TextBlock.filename">
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>

    <Style Selector="TextBlock.fileinfo">
        <Setter Property="Foreground" Value="#AAAAAA"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style Selector="ListBoxItem:selected TextBlock.fileinfo">
        <Setter Property="Foreground" Value="#EEEEEE"/>
    </Style>

    <Style Selector="Border.playerControls">
        <Setter Property="Background" Value="#2C2C2C"/>
        <Setter Property="BorderBrush" Value="#444444"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BoxShadow" Value="0 -2 12 0 #30000000"/>
        <Setter Property="Padding" Value="15"/>
    </Style>

    <Style Selector="Border.statusBar">
        <Setter Property="Background" Value="#8800FF"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>

    <Style Selector="Border.statusBar TextBlock">
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
</Styles>
